<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">

      <%= render 'layouts/error', model: @user %>

      <h2>User info</h2>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, placeholder: "Name", class: 'form-control' %>
        </div>
        <div class-"form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, placeholder: "Introduction", class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label><br>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: 'rounded mb-1' %><br>
          <%= f.attachment_field :profile_image, placeholder: "Image" %>
        </div>
        <hr>
        <div class="form-group">
          <%= f.submit 'Update User', class: 'btn btn-secondary' %>
        </div>
      <% end %>

    </div>
  </div>
</div>